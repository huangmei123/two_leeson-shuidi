.xButton
    box-sizing border-box /*mobile border以内的设置都是width
    height */
    display inline-block
    padding 6 1em
    border-radius 4px
    color #ffffff
    font-family inherit
    background-color #000000
    text-align center
    cursor pointer /*粘手*/
    user-select none 
    &.primary
        background-color #009900
    &.warning
        background-color #f90
    &.circle
        border-radius 1.5em
    &.block
        display block



.ripple
    position relative
    &::after
        content ""
        position absolute 
        width 100%
        height 100%
        top 0
        left 0
        display block
        background-image radial-gradient(circle,#fff 10%,transparent 11%)
        background-position 50% 
        transform scale(12) /*12->0*/
        transition transform .6s.opacity .6s
        opacity 0
    &:active::after
        opacity 1
        transform scale (0)
        transition 0s
